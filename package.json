{
  "name": "stock-trader",
  "version": "0.1.0",
  "type": "module",
  "private": true,
  "scripts": {
    "start": "bun run src/index.ts",
    "dev:server": "bun run --watch src/index.ts",
    "dev:dashboard": "bun run --filter dashboard dev",
    "dev": "bun run dev:server",
    "build": "bun run build:dashboard && bun run typecheck",
    "build:dashboard": "cd dashboard && bun run build",
    "typecheck": "tsc --noEmit",
    "lint": "oxlint ./src dashboard/src"
  },
  "engines": {
    "bun": ">=1.0.0"
  },
  "dependencies": {
    "@alpacahq/alpaca-trade-api": "^3.0.4",
    "@trpc/server": "^11.0.0-rc.0",
    "hono": "^4.6.0",
    "zod": "^3.23.0"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "oxlint": "^0.16.0",
    "typescript": "^5.6.0"
  },
  "workspaces": [
    "dashboard"
  ]
}
